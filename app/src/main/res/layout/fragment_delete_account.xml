<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DeleteAccountFragment">


    <TextView
        android:id="@+id/delete_textview_frag_del"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:gravity="center"
        android:text="Επιθυμείτε την Οριστική Διαγραφή του Λογαριασμού σας;"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/confirmdeletion_button_frag_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="28dp"
        android:text="Οριστική \n Διαγραφή Λογαριασμού"
        android:textAllCaps="false"
        android:layout_centerInParent="true"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textColor="@color/white"
        android:background="@color/likemagenda"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/delete_textview_frag_del"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/delete_textview_frag_del"
        app:layout_constraintTop_toBottomOf="@+id/delete_textview_frag_del"
        app:layout_constraintVertical_bias="0.125" />
</RelativeLayout>