<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AddPhotosActivity">

    <Button
        android:id="@+id/choose_image_button_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Επιλέξτε Eικόνα"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="20dp"
        android:textAllCaps="false"
        android:textSize="15sp"/>

    <EditText
        android:id="@+id/description_editText_photos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/choose_image_button_photos"
        android:hint="Περιγραφή"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/choose_image_button_photos" />

    <ImageView
        android:id="@+id/image_view_photos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/progress_bar_photos"
        android:layout_below="@id/description_editText_photos"
        android:layout_marginTop="16dp"
        android:background="@drawable/ic_action_photo" />

    <ProgressBar
        android:id="@+id/progress_bar_photos"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/upload_button_photos"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/upload_button_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="true"
        android:text="Ανέβασμα Αρχείου"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="15sp"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/all_uploads_button_photos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/upload_button_photos"
        android:layout_alignBottom="@+id/upload_button_photos"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/upload_button_photos"
        android:gravity="center"
        android:text="Προβολή \n Φωτογραφιών"
        android:textAllCaps="false"
        android:textSize="15sp"
        android:textColor="@color/likemagenda"/>

</RelativeLayout>