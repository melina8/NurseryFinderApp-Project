<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp">

    <LinearLayout

        android:background="@drawable/mybox"
        android:id="@+id/linear_inside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="0dp"
        >

        <ImageView

            android:id="@+id/profilephoto_imageview_row"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_action_profile"

            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nurseryname_textview_row"
                android:layout_marginTop="18dp"
                android:paddingLeft="0dp"
                android:gravity="left"
                android:text="Όνομα Παιδικού Σταθμού"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/likemagenda"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_for_nomos_row"
                android:layout_below="@+id/nurseryname_textview_row"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="3dp"
                android:paddingLeft="0dp">

                <TextView
                    android:id="@+id/nomos1_textview_row"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="0dp"
                    android:gravity="left"
                    android:text="Νομός:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="italic"
                    />


                <TextView
                    android:id="@+id/nomos_textview_row"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:inputType="text"
                    android:text="Ο Νομός μου"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:textStyle="italic"

                    />

            </LinearLayout>


            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/linear_for_dimos_row"
                android:layout_below="@id/linear_for_nomos_row"
                android:orientation="horizontal"
                android:gravity="left"
                android:layout_marginTop="3dp"
                android:paddingLeft="0dp">

                <TextView
                    android:id="@+id/dimos1_textview_row"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:paddingLeft="0dp"
                    android:gravity="left"
                    android:text="Δήμος:"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/dimos_textview_row"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:inputType="text"
                    android:text="Ο Δήμος μου"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="16sp"
                    android:gravity="left"
                    android:textStyle="italic"

                    />

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>


